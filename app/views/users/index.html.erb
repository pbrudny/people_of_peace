<h1><%= t('users') %></h1>

<div class="table-responsive">
<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th><%= t('name') %></th>
      <th><%= t('email') %></th>
      <th><%= t('phone') %></th>
      <th><%= t('city') %></th>
      <th><%= t('notify') %></th>
      <th><%= t('activerecord.attributes.user.last_sign_in_at') %></th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.phone %></td>
        <td><%= user.city %></td>
        <td><%= user.notify %></td>
        <td><%= time_ago_in_words(user.last_sign_in_at) %> temu</td>
        <% if current_user.admin? || current_user == user %>
            <td><%= user.sign_in_count %> logowa≈Ñ</td>
            <td><%= link_to t('edit'), edit_user_path(user) %></td>
          <td><%= link_to t('destroy'), user, method: :delete, data: { confirm: t('sure') } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>
