      <div class="field">
        <%= f.label :contact, t('contact') %>
        <%= f.text_field :contact %>
      </div>

      <div class="field">
        <%= f.label :priority, t('priority') %>
        <%= f.select :priority, Person.priority_options %>
      </div>

      <div class="field">
        <%= f.label :coordintator, t('coordinator') %>
        <%= f.select :coordinator_id, Coordinator.all.map { |c| [c.name, c.id]} %>
