          <div id="error_explanation">
            <h2><%= pluralize(@person.errors.count, "error") %> prohibited this person from being saved:</h2>

            <ul>
              <% @person.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>e
            </ul>
          </div>
      <% end %>

      <div class="field">
        <%= f.label :coordinator, t('coordinator') %>
        <%= f.select :coordinator, Coordinator.options %>
      </div>

      <div class="field">
        <%= f.label :name, t('name') %>
        <%= f.text_field :name %>
      </div>

      <div class="field">
        <%= f.label :city, t('city') %>
        <%= f.text_field :city %>
      </div>

      <div class="field">
        <%= f.label :source, t('source') %>
        <%= f.select :source, Person.source_options %>
      </div>

      <div class="field">
        <%= f.label :fellowship, t('fellowship') %>
        <%= f.select :fellowship, Person.fellowship_options %>
      </div>

      <div class="field">
        <%= f.label :need_gospel, t('need_gospel') %>
        <%= f.check_box :need_gospel %>
      </div>

      <div class="field">
        <%= f.label :need_baptism, t('need_baptism') %>
        <%= f.check_box :need_baptism %>
      </div>

      <div class="field">
