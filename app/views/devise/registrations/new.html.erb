<div class="auth-form">
  <h1>Rejestracja koordynatora</h1>
  <h4 class="subtitle">(np. lidera kościoła domowego)</h4>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.text_field :name, autofocus: true, placeholder: t('name'), :class => 'form-control' %>
  </div>

  <div class="field">
    <%= f.email_field :email, autofocus: true, placeholder: t('activerecord.attributes.user.email'), :class => 'form-control' %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "off", placeholder: t('activerecord.attributes.user.password'), :class => 'form-control' %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: t('activerecord.attributes.user.password_confirmation'), :class => 'form-control' %>
  </div>

  <div class="field">
    <%= f.text_field :city, placeholder: t('city_or_address'), :class => 'form-control' %>
  </div>

  <div class="field">
    <%= f.text_field :phone, placeholder: t('phone'), :class => 'form-control' %>
  </div>

  <div class="field">
    <%= f.text_field :skype, placeholder: t('skype_optional'), :class => 'form-control' %>
  </div>

  <div class="field">
    <%= f.text_field :fb, placeholder: t('facebook_optional'), :class => 'form-control' %>
  </div>

  <div class="field">
    <%= f.select :device, User.device_options, prompt: 'Zwykle internet przeglądam przez:' %>
  </div>

  <div class="field">
    <%= f.text_field :note, placeholder: t('note_optional'), :class => 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit t('devise.shared.links.sign_up'), :class => 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>